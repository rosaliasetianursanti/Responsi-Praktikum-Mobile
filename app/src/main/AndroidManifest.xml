<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="id.mobilecomputing.responsi">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SplashScreenActivity2"></activity>
        <activity android:name=".AboutActivity"
            android:label="About Us"/>
        <activity android:name=".aplikasiberita.Kategori.TechnologyActivity"
            android:label="Berita (Teknologi)"/>
        <activity android:name=".aplikasiberita.Kategori.SportActivity"
            android:label="Berita (Olahraga)"/>
        <activity android:name=".aplikasiberita.Kategori.ScienceActivity"
            android:label="Berita (Ilmu Pengetahuan)"/>
        <activity android:name=".aplikasiberita.Kategori.HealthActivity"
            android:label="Berita (Kesehatan)"/>
        <activity android:name=".aplikasiberita.Kategori.EnternainmentActivity"
            android:label="Berita (Hiburan)"/>
        <activity android:name=".aplikasiberita.Kategori.BusinessActivity"
            android:label="Berita (Bisnis)"/>
        <activity android:name=".aplikasiberita.Activity.DetailActivity"
            android:label="Detail Berita"/>
        <activity android:name=".aplikasiberita.Activity.MainActivity"
            android:label="Kategori Berita"/>
        <activity
            android:name=".DasboardActivity"
            android:label="Dashboard Aplikasi" />
        <activity
            android:name=".auth.RegisterActivity"
            android:label="Register (Daftar Akun)"
            android:parentActivityName=".auth.LoginActivity"
            android:theme="@style/AppTheme.NoActionBar">

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".auth.LoginActivity" />
        </activity>
        <activity
            android:name=".auth.LoginActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:label="Login Aplikasi"/>
        <activity android:name=".SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>